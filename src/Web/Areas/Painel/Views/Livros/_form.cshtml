@inherits ModelWebViewPage<TBook>
<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-lg-12">
            @this.Label(x => x.Title).Class("control-label").Value("Título:")
            @this.TextBox(x => x.Title).Class("required form-control").Autofocus(true)
            @Html.ValidationMessageFor(x => x.Title)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Pages).Class("control-label").Value("Páginas:")
            @this.TextBox(x => x.Pages).Class("required form-control")
            @Html.ValidationMessageFor(x => x.Pages)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Author).Class("control-label").Value("Autor:")
            @this.TextBox(x => x.Author).Class("required form-control")
            @Html.ValidationMessageFor(x => x.Author)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Edition).Class("control-label").Value("Edição:")
            @this.NumberBox(x => x.Edition).Class("required form-control")
            @Html.ValidationMessageFor(x => x.Edition)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Year).Class("control-label").Value("Ano:")
            @this.TextBox(x => x.Year).Class("required form-control")
            @Html.ValidationMessageFor(x => x.Year)
        </div>
        <div class="col-md-12 text-center" style="margin-top: 15px;">
            <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action(MVC.Painel.Livros.Index())'">
                <i class="fas fa-times"></i> Voltar
            </button>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-check"></i> Salvar
            </button>
        </div>
    }
</div>