@model List<TReservation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Painel/Views/Shared/_Layout.cshtml";
}
<h2>
    Reserva
</h2>
<div class="row" style="margin: 30px 0; text-align: right">
    <div class="col-lg-12 text-right">
        <a class="btn btn-primary btn-lg" data-toggle="tooltip" title="Cadastrar"
           href="@Url.Action(MVC.Painel.Reservas.Cadastrar())">
            <i class="fas fa-plus"></i> Cadastrar
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-hover tablesorter">
            <thead>
                <tr>
                    <th class="header">
                        ID Cliente
                    </th>
                    <th class="header">
                        Filmes
                    </th>
                    <th class="header">
                        Data de Retirada
                    </th>
                    <th class="header">
                        Data prevista para a Devolução
                    </th>
                    <th class="header">
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Client.Name
                            </td>
                            <td>
                                @foreach (var iten in item.TItens)
                                {
                                    <span>- @iten.Movie.Name</span>
                                }
                            </td>
                            <td>
                                @item.Withdraw
                            </td>
                            <td>
                                @item.Devolution
                            </td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-xs" data-toggle="tooltip" title="Editar"
                                   href="@Url.Action(MVC.Painel.Reservas.Editar(item.Id))">
                                    <i class="fas fa-pencil"></i> Editar
                                </a>
                                <button type="button" class="btn btn-danger btn-xs ajax-modal" data-toggle="tooltip" title="Excluir"
                                        href="@Url.Action(MVC.Painel.Reservas.Excluir(item.Id))">
                                    <i class="fas fa-trash"></i> Excluir
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="15" class="text-center">
                            <strong>Nenhum registro encontrado</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>