@model List<TClient>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Cliente/Views/Shared/_Layout.cshtml";
}
<h2>

    Clientes
</h2>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-hover tablesorter">
            <thead>
                <tr>
                    <th class="header">
                        Nome
                    </th>
                    <th class="header">
                        Email
                    </th>
                    <th class="header">
                        Telefone
                    </th>
                    <th class="header">
                        Login
                    </th>
                    <th class="header">
                        Preferências
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @ViewBag.Cliente.Name
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Telephone
                            </td>
                            <td>
                                @item.Login
                            </td>
                            <td>
                                @foreach (var genero in item.TPreferences)
                                {
                                    <span>- @genero.Category.Name</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="15" class="text-center">
                            <strong>Nenhum registro encontrado</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>