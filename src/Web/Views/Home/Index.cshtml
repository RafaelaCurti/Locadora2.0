@model List<TMovie>
@{
    ViewBag.Title = "Filmes da Plataforma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Filmes
</h2>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-hover tablesorter">
            <thead>
                <tr>
                    <th class="header">
                        Nome
                    </th>
                    <th class="header">
                        Gêneros
                    </th>
                    <th class="header">
                        Duração
                    </th>
                    <th class="header">
                        Ativo
                    </th>
                    <th class="header">
                        Criado em
                    </th>
                    <th class="header">
                        Estoque
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @foreach (var genero in item.TMovieCategories)
                                {
                                    <br />
                                    <span>- @genero.Category.Name</span>
                                }
                            </td>
                            <td>
                                @item.Duration
                            </td>
                            <td>
                                @(item.IsActive ? "Sim" : "Não")
                            </td>
                            <td>
                                @item.Date.DayMonthAndYear()
                            </td>
                            <td>
                                @item.Stock
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="15" class="text-center">
                            <strong>Nenhum registro encontrado</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

